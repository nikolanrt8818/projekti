{% extends "base.jinja" %}

{% block title %}
    User
{% endblock title %}

{% block content %}
    <h2>Email</h2>
    {% with messages = get_flashed_messages() %}
        {% if messages %}
            {% for msg in messages  %}
                <p>{{msg}}</p>
            {% endfor %}
        {% endif %}
    {% endwith %}
<form action="#" method="post">
    <input type="email" name="email" placeholder="Enter your email" value="{{email if email}}">
    <input type="submit" value="Submit" class="btn btn-primary">
</form>
{% endblock content %}